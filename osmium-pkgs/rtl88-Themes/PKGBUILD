pkgname=rtl88-Themes
_pkgname=rtl88-Themes
pkgver=1.0
pkgrel=1
pkgdesc="Themes from rtl88"
arch=('any')
license=('unknown')
makedepends=('git')
provides=('rtl88-Themes')
conflicts=('rtl88-Themes')

pkgver() {
	cd ${_pkgname}
	printf "%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    git clone https://github.com/rtlewis88/rtl88-Themes.git
    cd rtl88-Themes
    git for-each-ref refs/remotes/origin --format='../%(refname:lstrip=3) %(refname:lstrip=3)'|grep -v ' HEAD$' |xargs -n 2 git worktree add
    for b in ./*/*/; do cp -r "$b" ./; rm -fr "$b"; done
    mkdir -p "$pkgdir/usr/share/themes/"
	cp -r * "$pkgdir/usr/share/themes/"
}
